  <div class="cover-container span12">

    <div id="spinner"></div>
    <%= 
      link_to (
        image_tag @issue.cover.url(:large).to_s, :class => "thumbnail"),
        series_issue_path(@issue.series, @issue.issue_number
      )
    %>
  </div>
    <% if !@issue.own? %>
    <span class="label label-important">Missing</span>
    <% end -%>
    <span class="label-title"><%= @issue.series.title %> #<%= @issue.issue_number %></span>

<div class="btn-group">
	<%= link_to 'Edit', edit_series_issue_path(@issue.series,@issue.issue_number), :class => "btn" %>
	<%= link_to 'Delete', @issue, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" %>
	<%= link_to 'Back', series_path(@issue.series.slug), :class => "btn" %>
</div>